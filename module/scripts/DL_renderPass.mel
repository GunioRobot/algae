global proc string
DRP_expandDisplayFilename(string $render_pass, int $display_index, string $filename)
{
  string $aov = DRP_getDisplayOutputVariable($render_pass, $display_index);

  $aov = DL_substituteAll("color", $aov, "");
  $aov = DL_substituteAll("float", $aov, "");
  $aov = DL_substituteAll("normal", $aov, "");
  $aov = DL_substituteAll("vector", $aov, "");
  $aov = DL_substituteAll("point", $aov, "");
  $aov = DL_substituteAll("^[ ]*", $aov, "");
  $aov = DL_substituteAll("[ ,]+", $aov, "_");

  string $driver = DRP_getDisplayDriver($render_pass, $display_index);
  
  $filename = DL_replaceAllTokens("<output_variable>", $aov, $filename);
  $filename = DL_getExpandedFilename($filename, "", $render_pass, $driver);
  
  return $filename;
}

