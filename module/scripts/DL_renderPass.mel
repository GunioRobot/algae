    addAttr 
      -longName useMayaShaders 
      -attributeType bool 
      -defaultValue 1
      $render_pass;
  }

  if( !attributeExists( "concatenateGeoTransforms", $render_pass ) )
  {
    addAttr 
      -longName concatenateGeoTransforms 
      -attributeType bool 
      -defaultValue 1
      $render_pass;
  }

  if( !attributeExists( "concatenateLightTransforms", $render_pass ) )
  {
    addAttr 
      -longName concatenateLightTransforms 
      -attributeType bool 
      -defaultValue 1
      $render_pass;
  }
  
  if( !attributeExists( "standardAtmosphere", $render_pass ) )
  {
    addAttr 
      -longName standardAtmosphere 
      -attributeType bool 
      -defaultValue 0
      $render_pass;
  }

  if( !attributeExists( "volumeShadingRate", $render_pass ) )
  {
    addAttr 
      -longName volumeShadingRate
      -attributeType "float" 
      -min 0.001 
      -defaultValue 1
      $render_pass;
  }

  DL_updateEnumAttr(
    $render_pass, 
    "hider", 
    "hidden:raytrace:photon",
    0,
    0);
    
  if( !attributeExists( "translatedShadersAOVs", $render_pass ) )
  {
    addAttr 
      -longName "translatedShadersAOVs" 
      -attributeType "enum" 
      -en "Default AOVs for Render Mode:Defined AOVs Only:All AOVs" 
      -defaultValue 0 
      $render_pass;
  }
  
  if (!objExists($render_pass + ".depthFilter"))
  {
    addAttr -ln "depthFilter"
            -at "enum" 
            -en "min:max:average:midpoint"
            -dv 0
            $render_pass;
  }

  if (!objExists($render_pass + ".volumeInterpretation"))
  {
    addAttr 
      -ln "volumeInterpretation"
      -at "enum"
      -en "Discrete:Continuous:Distance Inside"
      -dv 0
      $render_pass;
  }

  DRP_checkConnectToRenderGlobals($render_pass);
}

global proc int
DRP_addDisplay(string $render_pass)
{
  // Adds a new display to the pass, initialize it with default values and 
  // return its index in the various display multi attributes.
  //
  int $index = getNextMultiAttribElementIndex($render_pass + ".displayFilenames");
  
  if (!objExists($render_pass + ".displaySubsetSets_" + $index))
  {
    addAttr 
      -longName ("displaySubsetSets_" + $index)
      -multi 
      -indexMatters false
      -attributeType message 
      $render_pass;
  }

  setAttr ($render_pass + ".displayRenderables[" + $index + "]") true;
 
  setAttr 
    ($render_pass + ".displayFilenames[" + $index + "]") 
    -type "string" 
    "3delight/<scene>/image/<scene>_<pass>.<ext>";

  setAttr 
    -type "string"
    ($render_pass + ".displayDrivers[" + $index + "]")
    "idisplay";
  
  setAttr 
    ($render_pass + ".displayOutputVariables [" + $index + "]")
    -type "string"
    "rgba";

  setAttr ($render_pass + ".displayOverridePixelFilters[" + $index + "]") 0;
  
  // default filter is sinc 4x4
  setAttr ($render_pass + ".displayPixelFilters[" + $index + "]") 5;

  setAttr ($render_pass + ".displayFilterWidthsX[" + $index + "]") 4;
  setAttr ($render_pass + ".displayFilterWidthsY[" + $index + "]") 4;

  // 8 bit by default
  setAttr ($render_pass + ".displayQuantizeZeros[" + $index + "]") 0;
  setAttr ($render_pass + ".displayQuantizeOnes[" + $index + "]") 255;
  setAttr ($render_pass + ".displayQuantizeMins[" + $index + "]") 0;
  setAttr ($render_pass + ".displayQuantizeMaxs[" + $index + "]") 255;
  setAttr ($render_pass + ".displayQuantizeDithers[" + $index + "]") 0.5;

  setAttr ($render_pass + ".displayGains[" + $index + "]") 1.0;
  setAttr ($render_pass + ".displayGammas[" + $index + "]") 1.0;

  // Default 3Delight values for these attributes
  setAttr ($render_pass + ".displayMattes[" + $index + "]") true;
  setAttr ($render_pass + ".displayExclusives[" + $index + "]") false;
  setAttr ($render_pass + ".displayAssociateAlphas[" + $index + "]") true;
  setAttr ($render_pass + ".displayComputeAlphas[" + $index + "]") false;

  setAttr ($render_pass + ".displaySubsetTypes[" + $index + "]") 0;

  // No edge detection but put sensible values in case the used enables it.
  setAttr ($render_pass + ".displayEdgeEnables[" + $index + "]") 0;
  setAttr 
    ($render_pass + ".displayEdgeVarNames[" + $index + "]") 
    -type "string" 
    "Ci";
  setAttr ($render_pass + ".displayEdgeThresholds[" + $index + "]") 0.1;
  setAttr 
    ($render_pass + ".displayEdgeColors[" + $index + "]") 
    -type float3 
    1 1 1;
  setAttr ($render_pass + ".displayEdgeFilterWidths[" + $index + "]") 2;
  setAttr ($render_pass + ".displayEdgeDepthEnables[" + $index + "]") 0;
  setAttr ($render_pass + ".displayEdgeDepthZMins[" + $index + "]") 0;
  setAttr ($render_pass + ".displayEdgeDepthZMaxs[" + $index + "]") 1000;
  setAttr ($render_pass + ".displayEdgeDepthMinFilters[" + $index + "]") 1;
  
  setAttr ($render_pass + ".displayFrameCollapseStates[" + $index + "]") false;
  setAttr ($render_pass + ".displayAdvancedFrameCollapseStates[" + $index + "]") true;
  setAttr ($render_pass + ".displayEdgeFrameCollapseStates[" + $index + "]") true;

  return $index;
}

