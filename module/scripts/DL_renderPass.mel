global proc
DRP_addRIBfragment(string $node_name)
{
  int $next_index;

  $next_index =
    getNextMultiAttribElementIndex($node_name + ".fragmentFilenames");

  setAttr ($node_name + ".fragmentFilenames[" + $next_index + "]")
          -type "string"
          "3delight/<scene>/rib/<scene>_<pass>_<fragment_set>.<ext>";

  setAttr ($node_name + ".fragmentUseStates[" + $next_index + "]") 1;
  setAttr ($node_name + ".fragmentWriteStates[" + $next_index + "]") 1;
  setAttr ($node_name + ".fragmentCollapseStates[" + $next_index + "]") 0;

  // TODO: is there a way to add an element to this multi without
  // connecting/disconnecting like this? This is ugly
  connectAttr persp.message ($node_name + ".fragmentObjectSets[" + $next_index + "]");
  disconnectAttr persp.message ($node_name + ".fragmentObjectSets[" + $next_index + "]");
}

global proc
DRP_deleteRIBfragment(string $node_name, int $which)
{
  removeMultiInstance ($node_name + ".fragmentFilenames[" + $which + "]");
  removeMultiInstance ($node_name + ".fragmentUseStates[" + $which + "]");
  removeMultiInstance ($node_name + ".fragmentCollapseStates[" + $which + "]");

  // we need to get rid of the set connection just in case a node is connected
  removeMultiInstance -b true ($node_name + ".fragmentObjectSets[" + $which + "]");
}
    

// return only indices for those fragments that are set to be used and have
// filenames and object sets specified
global proc int[]
DRP_getValidFragmentIndices(string $render_pass)
{
  int $indices[] = DRP_getFragmentIndices($render_pass);
  int $valid_indices[];

  for ($i in $indices)
  {
    int    $curr_use_state = DRP_getFragmentUseState($render_pass, $i);
    string $curr_filename = DRP_getFragmentFilename($render_pass, $i);

    if (   $curr_use_state != 0
        && $curr_filename != "")
    {
      $valid_indices[size($valid_indices)] = $i;
    }
    // else just skip it
  }

  return $valid_indices;
}

proc
clearFragmentInfoCache(string $render_pass)
{
  int $indices[] = DRP_getFragmentIndices($render_pass);
  
  for ($i in $indices)
  {
    if (`delightTable -tableExists ("fragment" + $i)`)
      delightTable -deleteTable ("fragment" + $i);
  }

  if (`delightTable -tableExists "ignore_fragment_geo"`)
    delightTable -deleteTable "ignore_fragment_geo";
}

proc
setupFragmentInfoCache(string $render_pass, string $render_layer_shapes[])
{
  // just to be safe
  clearFragmentInfoCache($render_pass);

  // collect all the lists of objects for each of the defined
  // fragments into delightTables

  int $indices[] = DRP_getValidFragmentIndices($render_pass);
  
  delightTable -addTable "ignore_fragment_geo";

  for ($i in $indices)
  {
    $fragment_name = ("fragment" + $i);

    delightTable -addTable $fragment_name;

    string  $curr_object_set = DRP_getFragmentObjectSet($render_pass, $i);
    string  $curr_filename = DRP_getFragmentFilename($render_pass, $i);
    int     $do_write = DRP_getFragmentWriteState($render_pass, $i);
    int     $write_mode = DRP_getFragmentWriteMode($render_pass);

    string  $curr_object_list[] = getGeometryInSet($curr_object_set);

    string $expanded_filename = DRP_expandFragmentFilename($render_pass,
                                                           $curr_object_set,
                                                           $curr_filename);

    // if we are on reuse mode and the file exists.. don't write
    if ($write_mode == 0 && `filetest -f $expanded_filename` != 0)
      $do_write = 0;

    for ($curr_object in $curr_object_list)
    {
      delightTable -setValueString $fragment_name $curr_object "";

      // only add objects to the table if they're meant to be ignored at
      // caching time
      if (!$do_write)
      {
        delightTable -setValueInt "ignore_fragment_geo" $curr_object $do_write;
      }
    }
  }
}


