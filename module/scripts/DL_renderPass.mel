global proc string
DRP_getDisplayEdgeDetectionString(string $render_pass, int $display_index)
{
  int $edge_enable;
  string $edge_varname;
  float $edge_threshold;
  float $edge_color[];
  float $edge_filterwidth;
  int $edge_filterwidth_interp;
  int $edge_depth_enable;
  float $edge_depth_zmin;
  float $edge_depth_zmax;
  float $edge_depth_minfilter;

  $edge_enable = getMultiAttributeIntValue(
    $render_pass + ".displayEdgeEnables", $display_index );

  if( !$edge_enable )
    return "";

  $edge_varname = getMultiAttributeStringValue(
    $render_pass + ".displayEdgeVarNames", $display_index);

  $edge_color = `getAttr 
    ($render_pass + ".displayEdgeColors[" + $display_index + "]")`;

  $edge_threshold = getMultiAttributeFloatValue(
    $render_pass + ".displayEdgeThresholds", $display_index);

  $edge_filterwidth = getMultiAttributeFloatValue(
    $render_pass + ".displayEdgeFilterWidths", $display_index);

  $edge_filterwidth_interp = getMultiAttributeIntValue(
    $render_pass + ".displayEdgeFilterWidthInterps", $display_index);

  string $edge_filter_param = "\"edgefilterwidth\"";
  if ($edge_filterwidth_interp != 0)
  {
    $edge_filter_param = "\"edgewidth\"";
    $edge_filterwidth /= 100;
  }
  
  $edge_depth_enable = getMultiAttributeIntValue(
    $render_pass + ".displayEdgeDepthEnables", $display_index);
  
  $edge_depth_zmin = getMultiAttributeFloatValue(
    $render_pass + ".displayEdgeDepthZMins", $display_index);

  $edge_depth_zmax = getMultiAttributeFloatValue(
    $render_pass + ".displayEdgeDepthZMaxs", $display_index);

  $edge_depth_minfilter = getMultiAttributeFloatValue(
    $render_pass + ".displayEdgeDepthMinFilters", $display_index);

  string $edgestring =
    " -p \"edgevariables\" \"string\" \"" + $edge_varname + "\"" +
    " -p \"edgethreshold\" \"float\" " + $edge_threshold +
    " -p \"edgecolor\" \"color\" \"" + floatArrayToString($edge_color) + "\"" +
    " -p " + $edge_filter_param + " \"float\" " + $edge_filterwidth;

  if( $edge_depth_enable )
  {
    $edgestring +=
      " -p \"edgefadeout\" \"float[3]\" \""
        + $edge_depth_zmin + " "
        + $edge_depth_zmax + " "
        + $edge_depth_minfilter + "\"";
  }

  return $edgestring;
}

// This is a patch because Linux AE refresh like crazy and quickly becomes 
// extremely slow. So instead of using the regular advanced collapse state attr,
// we use a single string attribute which acts like a stack of uncollapsed 
// "advanced" frame layouts. While this should pertain only to the AE template
// file, we need the "stack" string attr to be correclty updatd when a display
// is removed.
//
global proc int
DRP_getDisplayAdvancedCollapseState(string $render_pass, int $display_index)
{
  int $collapse = 1;

  string $os = `about -os`;
  if ($os == "linux" || $os == "linux64")
  {
    // If the display index is in the "stack" string attr, the advanced frame
    // layout is uncollapsed.
    //
    string $states = `getAttr ($render_pass + ".displaysAdvanceCollapseString")`;
    
    string $match = match((" " + $display_index + " "), $states);
    $collapse = (size($match) == 0);
  }
  else
  {
    string $collapse_attr = $render_pass 
      + ".displayAdvancedFrameCollapseStates[" 
      + $display_index 
      + "]";
    
    $collapse = getAttr($collapse_attr);
  }
  
  return $collapse;
}

global proc
DRP_setDisplayAdvancedCollapseState(
  int $state, 
  string $render_pass, 
  int $display_index)
{
  string $os = `about -os`;
  if ($os == "linux" || $os == "linux64")
  {
    // Look for the given display index in the "stack" string attr.
    // If the received state is "collapsed", simply remove
    // the index from the string.
    // If the received state is "expanded", remove any entry matching the
    // received index from the string, then append the index at the end.
    //
    string $collapse_string = `getAttr 
      ($render_pass + ".displaysAdvanceCollapseString")`;

    string $new_collapse_string = " ";
    string $display_index_as_string = $display_index;
    
    string $tokens[];
    int $num_tokens = tokenize($collapse_string, $tokens);

    int $i = 0;
    int $search_bound = $num_tokens;
    
    if (!$state)
    {
      int $max_states = 5;
      if ($max_states <= $search_bound)
      {
        $search_bound = $max_states;
        $i = 1;
      }
    }
    
    for(;$i < $search_bound; $i++)
    {
      string $curr_token = $tokens[$i];
      
      if ($curr_token != $display_index_as_string)
        $new_collapse_string += $curr_token + " ";
    }
    
    if (!$state)
      $new_collapse_string += $display_index_as_string + " ";
      
    setAttr 
      -type "string" 
      ($render_pass + ".displaysAdvanceCollapseString")
      $new_collapse_string;        
  }
  else
  {
    string $collapse_attr = $render_pass 
      + ".displayAdvancedFrameCollapseStates[" 
      + $display_index 
      + "]";
    
    setAttr $collapse_attr $state;
  }
}

global proc string
DRP_getDisplaySubset(string $render_pass, int $display_index)
{
  string $subset;
  
  int $subset_type = getAttr($render_pass 
    + ".displaySubsetTypes[" 
    + $display_index 
    + "]");
  
  string $sets_attr = "displaySubsetSets_" + $display_index;

  if ($subset_type != 0 && objExists($render_pass + "." + $sets_attr) != 0 )
  {
    string $connected_sets[] = 
      `listConnections ($render_pass + "." + $sets_attr)`;
    
    $subset = stringArrayToString($connected_sets, ",");
    
    if ($subset_type == 2)
    {
      $subset = "-" + $subset;
    }
  
    $subset = " -p \"subset\" \"string\" \"" + $subset + "\"";
  }
  
  return $subset;
}

