proc float[]
getObjectSpaceBboxUnion(string $objects[], float $union_bbox[])
{
  for($curr_obj in $objects)
  {
    float $curr_min[] = getAttr($curr_obj + ".boundingBoxMin");
    float $curr_max[] = getAttr($curr_obj + ".boundingBoxMax");
    
    if ($curr_min[0] < $union_bbox[0])
      $union_bbox[0] = $curr_min[0];

    if ($curr_min[1] < $union_bbox[1])
      $union_bbox[1] = $curr_min[1];

    if ($curr_min[2] < $union_bbox[2])
      $union_bbox[2] = $curr_min[2];

    if ($curr_max[0] > $union_bbox[3])
      $union_bbox[3] = $curr_max[0];

    if ($curr_max[1] > $union_bbox[4])
      $union_bbox[4] = $curr_max[1];

    if ($curr_max[2] > $union_bbox[5])
      $union_bbox[5] = $curr_max[2];
  }
  
  return $union_bbox;
}


