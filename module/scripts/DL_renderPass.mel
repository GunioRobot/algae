proc
beginRIBfile(string $expanded_filename,
             int $binary_rib,
             int $compressed_rib,
             int $append)
{
  if ($compressed_rib)
  {
    // the compression option needs to be before the RiBegin
    RiOption -id false
             -n "rib"
             -p "compression" "string" "gzip";
  }

  string $prefix;

  if ($append)
  {
    $prefix = ">>";
  }

  RiBegin -of ($prefix + $expanded_filename);
  print( "Writing RIB to \"" + $prefix + $expanded_filename + "\"\n" );

  if ($binary_rib)
  {
    // the format option needs to be after the RiBegin
    RiOption -id false
             -n "rib"
             -p "format" "string" "binary";
  }
}

proc string
beginRIB(string $render_pass,
         int $curr_frame,
         string $prev_ribfile)
{
  string $rib_file;
  
  if( DRP_isImmediateRenderMode($render_pass) )
  {
    RiBegin;

    if (DL_haveMayaUI())
    {
      // This redirects messages to the script editor. We only use it on Mac OS
      // as windows has the Output Window and linux usually has a shell.
      if( `about -macOS` )
      {
        RiErrorHandler -handler "maya";
      }
    }
  }
  else
  {
    int $binary_rib;
    int $compressed_rib;
    int $append;

    $rib_file = DL_getExpandedFilename(
      getAttr($render_pass + ".ribFilename"), 
      "",
      $render_pass,
      "rib");
    
    $binary_rib = getAttr($render_pass + ".binaryRib");

    $compressed_rib = getAttr($render_pass + ".compressedRib");

    if ($rib_file == $prev_ribfile)
      $append = 1;
    else
      $append = 0;

    beginRIBfile($rib_file, $binary_rib, $compressed_rib, $append);
  }
  
  return $rib_file;
}

global proc string
DRP_expandFragmentFilename(string $render_pass,
                           string $fragment_object_set, 
                           string $fragment_filename)
{
  string $expanded_filename;

  // do one more expansion of the <fragment_set> token.. we have to do it
  // before DL_getExpandedFilename because of certain implementation details.
  if ($fragment_object_set == "")
    $fragment_object_set = "all-visible-objects";

  $expanded_filename = DL_replaceAllTokens("<fragment_set>",
                                           $fragment_object_set,
                                           $fragment_filename);

  $expanded_filename = DL_getExpandedFilename($expanded_filename,
                                              "",
                                              $render_pass,
                                              "rib");

  return $expanded_filename;
}

