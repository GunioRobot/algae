proc
copyDisplayAttr(
  string $render_pass,
  string $old_attr, 
  string $new_attr,
  int $delete_src_after_copy)
{
  string $old_plug = $render_pass + "." + $old_attr;
  string $new_plug = $render_pass + "." + $new_attr;
  
  if (objExists($old_plug))
  {
    DL_copyAttribute($old_plug, $new_plug);
    
    if ($delete_src_after_copy)
      deleteAttr $old_plug;
  }
}

proc
updateDisplayAttributes(string $render_pass)
{
  string $display_drivers[] = DRP_getAllDisplayDrivers();

  if (objExists($render_pass + ".imageFilename"))
  {
    int $index = DRP_addDisplay($render_pass);
    
    string $src = "imageFilename";
    string $dst = "displayFilenames[" + $index + "]";
    copyDisplayAttr($render_pass, $src, $dst, 1);

    $src = "displayDriver";
    $dst = "displayDrivers[" + $index + "]";
    if (objExists($render_pass + "." + $src))
    {
      int $old_driver = getAttr($render_pass + "." + $src);
        
      setAttr
        -type "string"
        ($render_pass + "." + $dst)
        $display_drivers[$old_driver];
        
      deleteAttr ($render_pass + ".displayDriver");
    }

    $src = "displayMode";
    $dst = "displayOutputVariables[" + $index + "]";
    copyDisplayAttr($render_pass, $src, $dst, 1);

    if (objExists($render_pass + ".bitDepth"))
    {
      string $old_bit_depth = `getAttr -asString ($render_pass + ".bitDepth")`;
      
      switch($old_bit_depth)
      {
        case "16 bit integer":
          DRP_setDisplayQuantizeAttrs(
            $render_pass, 
            $index, 
            0, 65535, 0, 65535, 0.5);
          break;

        case "32 bit float":
          DRP_setDisplayQuantizeAttrs(
            $render_pass, 
            $index, 
            0, 0, 0, 0, 0);
          break;
        
        case "Custom Quantize":
          DRP_setDisplayQuantizeAttrs(
            $render_pass,
            $index,
            getAttr($render_pass + ".quantizeZero"),
            getAttr($render_pass + ".quantizeOne"),
            getAttr($render_pass + ".quantizeMin"),
            getAttr($render_pass + ".quantizeMax"),
            getAttr($render_pass + ".quantizeDither"));
          break;
          
        case "8 bit integer":
        default:
          DRP_setDisplayQuantizeAttrs(
            $render_pass, 
            $index, 
            0, 255, 0, 255, 0.5);
          break;
      }
      
      deleteAttr ($render_pass + ".quantizeZero");
      deleteAttr ($render_pass + ".quantizeOne");
      deleteAttr ($render_pass + ".quantizeMin");
      deleteAttr ($render_pass + ".quantizeMax");
      deleteAttr ($render_pass + ".quantizeDither");
      deleteAttr ($render_pass + ".bitDepth");
    }

    $src = "gain";
    $dst = "displayGains[" + $index + "]";
    copyDisplayAttr($render_pass, $src, $dst, 1);

    $src = "gamma";
    $dst = "displayGammas[" + $index + "]";
    copyDisplayAttr($render_pass, $src, $dst, 1);
    
    $src = "renderPrimaryDisplay";
    $dst = "displayRenderables[" + $index + "]";
    copyDisplayAttr($render_pass, $src, $dst, 1);
  }

  if (objExists($render_pass + ".secondaryFilenames"))
  {
    int $old_indices[] = 
      getMultiAttribElementIndices($render_pass + ".secondaryFilenames");

    int $i;
    for($i = 0; $i < size($old_indices); $i++)
    {
      int $do_delete = ($i == (size($old_indices) - 1));
      int $curr_index = $old_indices[$i];
      
      int $index = DRP_addDisplay($render_pass);

      string $src = "secondaryFilenames[" + $curr_index + "]";
      string $dst = "displayFilenames[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryDisplayDrivers[" + $curr_index + "]";
      $dst = "displayDrivers[" + $index + "]";
      if (objExists($render_pass + "." + $src))
      {
        int $old_driver = getAttr($render_pass + "." + $src);

        setAttr
          -type "string" 
          ($render_pass + "." + $dst)
          $display_drivers[$old_driver];
      
        if ($do_delete)
          deleteAttr ($render_pass + ".secondaryDisplayDrivers");
      }

      $src = "secondaryDisplayModes[" + $curr_index + "]";
      $dst = "displayOutputVariables[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryOverridePixelFilters[" + $curr_index + "]";
      $dst = "displayOverridePixelFilters[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryPixelFilters[" + $curr_index + "]";
      $dst = "displayPixelFilters[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryFilterWidthsX[" + $curr_index + "]";
      $dst = "displayFilterWidthsX[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryFilterWidthsY[" + $curr_index + "]";
      $dst = "displayFilterWidthsY[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);
     
      $src = "secondaryBitDepths[" + $curr_index + "]";
      if (objExists($render_pass + "." + $src))
      {
        string $old_bit_depth = `getAttr -asString ($render_pass + "." + $src)`;
        
        switch($old_bit_depth)
        {
          case "16 bit integer":
            DRP_setDisplayQuantizeAttrs(
              $render_pass, 
              $index, 
              0, 65535, 0, 65535, 0.5);
            break;

          case "32 bit float":
            DRP_setDisplayQuantizeAttrs(
              $render_pass, 
              $index, 
              0, 0, 0, 0, 0.5);
            break;
          
          case "Custom Quantize":
            DRP_setDisplayQuantizeAttrs(
              $render_pass,
              $index,
              getAttr($render_pass + ".secondaryQuantizeZeros[" + $curr_index + "]"),
              getAttr($render_pass + ".secondaryQuantizeOnes[" + $curr_index + "]"),
              getAttr($render_pass + ".secondaryQuantizeMins[" + $curr_index + "]"),
              getAttr($render_pass + ".secondaryQuantizeMaxes[" + $curr_index + "]"),
              getAttr($render_pass + ".secondaryQuantizeDithers[" + $curr_index + "]"));
            break;
            
          case "8 bit integer":
          default:
            DRP_setDisplayQuantizeAttrs(
              $render_pass, 
              $index,
              0, 255, 0, 255, 0.5);
            break;
        }
      
        if ($do_delete)
        {
          deleteAttr ($render_pass + ".secondaryBitDepths");
          deleteAttr ($render_pass + ".secondaryQuantizeZeros");
          deleteAttr ($render_pass + ".secondaryQuantizeOnes");
          deleteAttr ($render_pass + ".secondaryQuantizeMins");
          deleteAttr ($render_pass + ".secondaryQuantizeMaxes");
          deleteAttr ($render_pass + ".secondaryQuantizeDithers");
        }
      }

      $src = "secondaryGains[" + $curr_index + "]";
      $dst = "displayGains[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);
     
      $src = "secondaryGammas[" + $curr_index + "]";
      $dst = "displayGammas[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryMatte[" + $curr_index + "]";
      $dst = "displayMattes[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryExclusive[" + $curr_index + "]";
      $dst = "displayExclusives[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryAssociateAlpha[" + $curr_index + "]";
      $dst = "displayAssociateAlphas[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryComputeAlpha[" + $curr_index + "]";
      $dst = "displayComputeAlphas[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondarySubsetTypes[" + $curr_index + "]";
      $dst = "displaySubsetTypes[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondarySubsetSets_" + $curr_index;
      $dst = "displaySubsetSets_" + $index;
      copyDisplayAttr($render_pass, $src, $dst, 1);

      $src = "secondaryEdgeEnables[" + $curr_index + "]";
      $dst = "displayEdgeEnables[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryEdgeVarNames[" + $curr_index + "]";
      $dst = "displayEdgeVarNames[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryEdgeThresholds[" + $curr_index + "]";
      $dst = "displayEdgeThresholds[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      // old edgeColor attr was made with "-dt float3" and we can't inspect
      // its children. So we simply do a get / set attr.
      //
      $src = "secondaryEdgeColors[" + $curr_index + "]";
      $dst = "displayEdgeColors[" + $index + "]";      
      if (objExists($render_pass + "." + $src))
      {
        float $edge_color[] = `getAttr ($render_pass + "." + $src)`;
        setAttr ($render_pass + "." + $dst + ".displayEdgeColorsR") $edge_color[0];
        setAttr ($render_pass + "." + $dst + ".displayEdgeColorsG") $edge_color[1];
        setAttr ($render_pass + "." + $dst + ".displayEdgeColorsB") $edge_color[2];
        
        if ($do_delete)
          deleteAttr ($render_pass + ".secondaryEdgeColors");
      }

      $src = "secondaryEdgeFilterWidths[" + $curr_index + "]";
      $dst = "displayEdgeFilterWidths[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryEdgeFilterWidthInterps[" + $curr_index + "]";
      $dst = "displayEdgeFilterWidthInterps[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryEdgeDepthEnables[" + $curr_index + "]";
      $dst = "displayEdgeDepthEnables[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryEdgeDepthZMins[" + $curr_index + "]";
      $dst = "displayEdgeDepthZMins[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryEdgeDepthZMaxs[" + $curr_index + "]";
      $dst = "displayEdgeDepthZMaxs[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);

      $src = "secondaryEdgeDepthMinFilters[" + $curr_index + "]";
      $dst = "displayEdgeDepthMinFilters[" + $index + "]";
      copyDisplayAttr($render_pass, $src, $dst, $do_delete);
    }  
  }
}

global proc string
DL_createRenderPassNode()
{
  string  $new_node;
  string  $display_driver_enum;
  
  if (`getApplicationVersionAsFloat` >= 8.0)
  {
    $new_node = `createNode -skipSelect delightRenderPass`;
  }
  else
  {
    string $cur_selection[];
    $cur_selection = `ls -sl`;
    $new_node = `createNode delightRenderPass`;
    select -noExpand $cur_selection;
  }

  delightSetPluginVersion($new_node);

  // Add all the required attributes.
  DRP_init($new_node, 0);

  DRP_setCamera($new_node, "perspShape");

  // run the user's init command, if it exists
  if (exists("DL_userRenderPassInit"))
  {
    eval("DL_userRenderPassInit \"" + $new_node + "\"");
  }

  // Return the name of the newly created node.
  //
  return $new_node;
}

