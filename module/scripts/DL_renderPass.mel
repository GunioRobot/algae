global proc
DRP_duplicateDisplay(string $render_pass, int $src_index)
{
  int $dst_index = DRP_addDisplay($render_pass);
  
  string $attrs[];
  clear($attrs);
  $attrs[size($attrs)] = "displayRenderables";
  $attrs[size($attrs)] = "displayFilenames";
  $attrs[size($attrs)] = "displayDrivers";
  $attrs[size($attrs)] = "displayOutputVariables";
  $attrs[size($attrs)] = "displayOverridePixelFilters";
  $attrs[size($attrs)] = "displayPixelFilters";
  $attrs[size($attrs)] = "displayFilterWidthsX";
  $attrs[size($attrs)] = "displayFilterWidthsY";
  $attrs[size($attrs)] = "displayQuantizeZeros";
  $attrs[size($attrs)] = "displayQuantizeOnes";
  $attrs[size($attrs)] = "displayQuantizeMins";
  $attrs[size($attrs)] = "displayQuantizeMaxs";
  $attrs[size($attrs)] = "displayQuantizeDithers";
  $attrs[size($attrs)] = "displayGains";
  $attrs[size($attrs)] = "displayGammas";
  $attrs[size($attrs)] = "displayMattes";
  $attrs[size($attrs)] = "displayExclusives";
  $attrs[size($attrs)] = "displayAssociateAlphas";
  $attrs[size($attrs)] = "displayComputeAlphas";
  $attrs[size($attrs)] = "displaySubsetTypes";
  $attrs[size($attrs)] = "displayEdgeEnables";
  $attrs[size($attrs)] = "displayEdgeVarNames";
  $attrs[size($attrs)] = "displayEdgeThresholds";
  $attrs[size($attrs)] = "displayEdgeFilterWidths";
  $attrs[size($attrs)] = "displayEdgeDepthEnables";
  $attrs[size($attrs)] = "displayEdgeDepthZMins";
  $attrs[size($attrs)] = "displayEdgeDepthZMaxs";
  $attrs[size($attrs)] = "displayEdgeDepthMinFilters";

  for($curr_attr in $attrs)
  {
    copyDisplayAttr(
      $render_pass, 
      ($curr_attr + "[" + $src_index + "]"),
      ($curr_attr + "[" + $dst_index + "]"),
      0);
  }
  
  copyDisplayAttr(
    $render_pass, 
    ("displaySubsetSets_" + $src_index), 
    ("displaySubsetSets_" + $dst_index), 
    0);

  copyDisplayAttr(
    $render_pass,
    ("displayEdgeColors[" + $src_index + "].displayEdgeColorsR"),
    ("displayEdgeColors[" + $dst_index + "].displayEdgeColorsR"),
    0);
  copyDisplayAttr(
    $render_pass,
    ("displayEdgeColors[" + $src_index + "].displayEdgeColorsG"),
    ("displayEdgeColors[" + $dst_index + "].displayEdgeColorsG"),
    0);
  copyDisplayAttr(
    $render_pass,
    ("displayEdgeColors[" + $src_index + "].displayEdgeColorsB"),
    ("displayEdgeColors[" + $dst_index + "].displayEdgeColorsB"),
    0);
}

